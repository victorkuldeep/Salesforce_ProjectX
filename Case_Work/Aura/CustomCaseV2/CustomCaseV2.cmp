<aura:component controller="CaseController" implements="lightning:actionOverride,force:hasRecordId" access="global">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="isModalOpen" type="Boolean" default="false"/>
    <aura:attribute name="caseRecord" type="Case" />
    <aura:attribute name="headerText" type="String" />
    <aura:attribute name="pageReference" type="Object"/>
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <lightning:navigation aura:id="navService"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.handleInit}" />
    
    <force:recordData
        aura:id="caseRecordLoader"
        recordId="{!v.recordId}"
        layoutType="FULL"
        targetFields="{!v.caseRecord}"
        fields="CaseNumber,Subject"
        mode="VIEW"
    />
    
    <aura:if isTrue="{!v.isModalOpen}">
        <div aura:id="lwcContainer"></div>
    </aura:if>
</aura:component>